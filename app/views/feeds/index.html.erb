<p id="notice"><%= notice %></p>

<h1>Feeds_Index</h1>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>メッセージ</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image.url %></td>
        <td><%= feed.content %></td>
        <td><%= feed.user.name %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: '削除していいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく画像を投稿する', new_feed_path %>
